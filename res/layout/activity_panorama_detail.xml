<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanoramaDetail" >

    <ImageButton
        android:id="@+id/panoramaDetailBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:src="@drawable/button_topbar" />

    <ImageView
        android:id="@+id/panoramaDetailTopBarImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/panoramaDetailBackBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/panoramaDetailBackBtn"
        android:src="@drawable/img_topbar_others" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/panoramaDetailBackBtn"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/panoramaDetailPicturesViewPager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </android.support.v4.view.ViewPager>

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/panoramaDetailCircleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/panoramaDetailPicturesViewPager"
            android:layout_alignParentRight="true"
            android:padding="10dip" />

        <TextView
            android:id="@+id/panoramaDetailHoursText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/panoramaDetailTitleText"
            android:layout_marginLeft="10dp"
            android:text="LUNES A DOMINGO - 18:00 A 23 HORAS"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#2d2d2d" />

        <TextView
            android:id="@+id/panoramaDetailTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Teleférico San Cristóbal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/panoramaDetailValueImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/img_value_detail" />

        <TextView
            android:id="@+id/panoramaDetailValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:text="TextView"
            android:textColor="#FFFFFF" />

        <RatingBar
            android:id="@+id/panoramaDetailRatingBar"
            style="@style/RatingBarAppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/panoramaDetailHoursText"
            android:layout_marginLeft="10dp"
            android:max="5"
            android:numStars="5"
            android:stepSize="1.0" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/panoramaDetailDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
