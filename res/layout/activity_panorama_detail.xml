            android:textColor="#2d2d2d"
            android:textSize="16sp" />

    </ScrollView>

    <RelativeLayout
        android:id="@+id/panoramaDetailBottomActionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp" >

        <ImageButton
            android:id="@+id/panoramaDetailComoLlegarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/button_comollegar" />

        <ImageButton
            android:id="@+id/panoramaDetailShareBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/panoramaDetailCommentsLayout"
            android:background="@null"
            android:src="@drawable/button_share" />

        <ImageButton
            android:id="@+id/panoramaDetailMusicBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/panoramaDetailComoLlegarBtn"
            android:background="@null"
            android:src="@drawable/button_music" />

        <RelativeLayout
            android:id="@+id/panoramaDetailCommentsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/panoramaDetailMusicBtn" >

            <ImageButton
                android:id="@+id/panoramaDetailCommentsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/button_comments" />

            <TextView
                android:id="@+id/panoramaDetailCommentsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:text="100"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fbfbfb" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>